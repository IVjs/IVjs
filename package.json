{
  "name": "ivjs",
  "version": "0.3.1-pre",
  "description": "ivjs",
  "scripts": {
    "test": "jest --watch",
    "start": "webpack-dev-server",
    "lint": "tslint --project tsconfig.json",
    "docs": "docsify serve -o docs",
    "build": "run-s clean build:with-html",
    "deploy:docs": "run-s test:release build:docs push-docs",
    "release:major": "gulp release --increment=major",
    "release:minor": "gulp release --increment=minor",
    "release:patch": "gulp release --increment=patch",
    "test:release": "jest --json --outputFile ./test-results.json",
    "clean": "rimraf build",
    "push-docs": "node npm-scripts/docs-to-server",
    "build:with-html": "webpack",
    "build:docs": "webpack --config webpack.docs.config.js"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.2",
    "browser-sync": "^2.23.6",
    "clean-webpack-plugin": "^0.1.19",
    "copy-dir": "^0.3.0",
    "copy-webpack-plugin": "^4.1.1",
    "coveralls": "^2.0.0",
    "css-loader": "^0.28.7",
    "docsify-cli": "^4.2.0",
    "dotenv": "^5.0.1",
    "gulp": "^3.9.1",
    "gulp-bump": "^3.1.0",
    "gulp-concat-util": "^0.5.5",
    "gulp-git": "^2.5.2",
    "gulp-replace": "^0.6.1",
    "gulp-s3": "^0.11.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.5.2",
    "rimraf": "^2.0.0",
    "run-sequence": "^2.2.1",
    "sass-loader": "^6.0.6",
    "semver": "^5.5.0",
    "style-loader": "^0.19.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.0.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.1.5",
    "webpack": "^4.24.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "yargs": "^11.0.0"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupTestFrameworkScriptFile": "./src/test-support/setup-env.js"
  },
  "dependencies": {
    "eventemitter3": "^3.0.1",
    "happy-helpers": "^1.3.0",
    "mobile-detector": "^1.0.2"
  }
}
