{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "importHelpers": true,
    "moduleResolution": "node",
    "outDir": "./build/",
    "declaration": true,
    "esModuleInterop": true,
    "strict": false,
    "noEmitHelpers": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src/lib/**/*",
    "src/typings.d.ts",
    "src/test-support/**/*.ts"
  ]
}